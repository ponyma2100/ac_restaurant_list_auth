<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container">
  <div class="row d-flex justify-content-end mb-3 mr-3">
    <a href="/restaurants/create" class="btn btn-info">Create</a>
    <div class="dropdown ml-2">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        Sort
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/sort/name/asc">A->Z</a>
        <a class="dropdown-item" href="/sort/name/desc">Z->A</a>
        <a class="dropdown-item" href="/sort/category/desc">Category</a>
        <a class="dropdown-item" href="/sort/location/desc">Location</a>
        <a class="dropdown-item" href="/sort/rating/desc">Rating</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div class="d-flex justify-content-end mt-2">
                <form action="/restaurants/{{ this._id }}/edit" style="display: inline;">
                  <button class="btn btn-outline-primary btn-sm mr-2" type="submit">Edit</button>
                </form>
                <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                  <button class="btn btn-outline-danger btn-sm" type="submit"
                    onclick="alert('Are you sure to delete ?')">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>